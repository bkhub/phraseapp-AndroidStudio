<idea-plugin version="2">
    <id>com.phraseapp.androidstudio</id>
    <name>PhraseApp</name>
    <version>2.3</version>
    <vendor email="support@phraseapp.com" url="https://www.phraseapp.com">PhraseApp</vendor>

    <description><![CDATA[
      PhraseApp helps you manage Translations in your Android Studio projects.
    ]]></description>

    <change-notes><![CDATA[
      Version 2.3<br/>
      <em>- supports CLI yml config</em><br/>
      Version 2.2<br/>
      <em>- improves performance, adds more detailed error handling</em><br/>
      Version 2.1<br/>
      <em>- fixes a problem when Android-style locale-culture codes (e.g. "pl-rPL") are used</em><br/>
      Version 2.0<br/>
      <em>- support for PhraseApp API v2</em><br/>
    ]]>
    </change-notes>

    <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>


    <depends>com.intellij.modules.lang</depends>


    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="com.phraseapp.androidstudio.PhraseAppConfigurable"></applicationConfigurable>
        <toolWindow id="PhraseApp" anchor="right" icon="/phrase_13x13.png"
                    factoryClass="com.phraseapp.androidstudio.PhraseAppToolWindow"></toolWindow>
    </extensions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
    </project-components>

    <actions>
        <group id="PhraseApp.PhraseAppMenu" text="PhraseApp" description="PhraseApp">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="com.phraseapp.androidstudio.PhraseAppDownload"
                    class="com.phraseapp.androidstudio.DownloadButton" text="Download Locales"
                    description="Download Locales from PhraseApp">
                <keyboard-shortcut keymap="$default" first-keystroke="shift control D" />
            </action>

            <action id="com.phraseapp.androidstudio.PhraseAppUpload" class="com.phraseapp.androidstudio.UploadButton"
                    text="Upload Locales" description="Upload Locales to PhraseApp">
                <keyboard-shortcut keymap="$default" first-keystroke="shift control U" />
            </action>
            <action id="com.phraseapp.androidstudio.PhraseAppWeb" class="com.phraseapp.androidstudio.WebButton"
                    text="PhraseApp Translation Center"
                    description="Open the PhraseApp Translation Center in your browser"/>
        </group>
    </actions>

</idea-plugin>